<?xml version="1.0" ?>

<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" method="balance_quantity" />
    <experiment length="10000"
                ticks_per_second="5"
                random_seed="123" />
  </framework>
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <bitd_dpo_controller id="ffc"
                          library="libfordyca">
      <actuators>
        <differential_steering implementation="default" />
        <!-- <leds implementation="default" medium="leds" /> -->
        <range_and_bearing implementation="default" />
      </actuators>
      <sensors>
        <differential_steering implementation="default" />
        <footbot_proximity implementation="default" show_rays="true">
        </footbot_proximity>
        <positioning implementation="default"/>
        <footbot_light implementation="rot_z_only" show_rays="false">
        </footbot_light>
        <footbot_motor_ground implementation="rot_z_only" />
        <!-- <range_and_bearing implementation="medium" medium="rab" /> -->
        <colored_blob_omnidirectional_camera implementation="rot_z_only"
                                             medium="leds" />
        <battery implementation="default" />
      </sensors>
      <params>
        <rng seed="123"/>
        <output
            output_root="output"
            output_dir="__current_date__"
            />
        <perception
            los_dim="0.4">
          <grid2D resolution="0.2"
                dims="12, 6, 2"/>
          <pheromone rho="0.00001"
                     repeat_deposit="false"/>
        </perception>
        <task_executive
            update_exec_ests="true"
            update_interface_ests="true"
            />
        <task_alloc
            policy="stoch_nbhd1">
          <task_abort>
            <src_sigmoid_sel
                input_src="exec">
              <sigmoid_sel
                  method="harwell2018">
                <sigmoid reactivity="8"
                         offset="3"
                         gamma="1.0"/>
              </sigmoid_sel>
            </src_sigmoid_sel>
          </task_abort>
          <task_exec_estimates
              seed_enabled="false"
              generalist="2000:4000"
              collector="1000:2000"
              harvester="1000:2000"
              cache_starter="1000:2000"
              cache_finisher="1000:2000"
              cache_collector="1000:2000"
              cache_transferer="1000:2000">
            <ema alpha="0.8"/>
          </task_exec_estimates>

          <epsilon_greedy epsilon="0.11"
                          regret_bound="linear"/>

          <ucb1 gamma="1000"/>

          <stoch_nbhd1
              tab_init_policy="max_depth">
            <task_partition
                always_partition="true"
                never_partition="false">
              <src_sigmoid_sel
                  input_src="exec">
                <sigmoid_sel
                    method="pini2011">
                  <sigmoid
                      reactivity="4"
                      offset="1.0"
                      gamma="1.0"/>
                </sigmoid_sel>
              </src_sigmoid_sel>
            </task_partition>
            <subtask_sel>
              <src_sigmoid_sel
                  input_src="exec">
                <sigmoid_sel
                    method="harwell2018">
                  <sigmoid
                      reactivity="8"
                      offset="1.25"
                      gamma="1.0"/>
                </sigmoid_sel>
              </src_sigmoid_sel>
            </subtask_sel>
            <tab_sel>
              <src_sigmoid_sel
                  input_src="exec">
                <sigmoid_sel
                    method="harwell2019">
                  <sigmoid
                      reactivity="4"
                      offset="1.0"
                      gamma="1.0"/>
                </sigmoid_sel>
              </src_sigmoid_sel>
            </tab_sel>
          </stoch_nbhd1>
        </task_alloc>
        <block_sel_matrix
            nest="6, 3">
          <!--       <block_priorities -->
          <!--           cube="1.0" -->
          <!--           ramp="1.0" -->
          <!--           /> -->
          <!--       <pickup_policy -->
          <!--           policy="cluster_proximity" -->
          <!--           prox_dist="3.0" -->
          <!--           /> -->
        </block_sel_matrix>
        <cache_sel_matrix
            cache_prox_dist="1.6"
            nest_prox_dist="3.0"
            block_prox_dist="1.0"
            site_xrange="2:10"
            site_yrange="2.5:3">
          <pickup_policy
              policy="Null"
              timestep="20000"
              cache_size="3"/>
        </cache_sel_matrix>
        <exploration
            block_strategy="CRW"
            cache_strategy="utility_search"/>
        <sensing_subsystemQ3D>
          <!-- -5pi/6 : 5pi/6 -->
          <proximity_sensor fov="-2.61:2.61"
                            delta="0.1" />

          <ground_sensor>
            <!-- NEST: The nest is a relatively light gray. -->
            <nest range="0.6:0.8"
                  consensus="3"/>
            <!-- BLOCK: Blocks are black. -->
            <block range="-0.05:0.05"
                   consensus="4"/>
            <!-- CACHE: Caches are dark gray. -->
            <cache range="0.3:0.5"
                   consensus="3"/>
          </ground_sensor>
        </sensing_subsystemQ3D>
        <actuation_subsystem2D>
          <force_calculator>
            <avoidance_force lookahead="0.5"
                             max="8"/>
            <arrival_force slowing_radius="0.2"
                           slowing_speed_min="1.0"
                           max="8"/>
            <wander_force circle_distance="4.0"
                          circle_radius="100.0"
                          max_angle_delta="5"
                          max="9.0"
                          interval="1"
                          normal_dist="false"/>
            <phototaxis_force max="8"/>
          </force_calculator>

          <diff_drive soft_turn_max="45"
                      max_speed="10.0" />
        </actuation_subsystem2D>
      </params>
    </bitd_dpo_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="libfordyca"
                  label="depth1_loop_functions">
    <output
        output_root="output"
        output_dir="__current_date__">
      <metrics
          output_dir="metrics">
        <append
            output_interval="1000"
            block_acq_counts="block-acq-counts"
            block_transport="block-transport"
            block_manipulation="block-manipulation"
            cache_acq_counts="cache-acq-counts"
            cache_utilization="cache-utilization"
            cache_lifecycle="cache-lifecycle"
            cache_site_selection="cache-site-selection"
            task_execution_generalist="task-execution-generalist"
            task_execution_collector="task-execution-collector"
            task_execution_harvester="task-execution-harvester"
            task_execution_cache_starter="task-execution-cache_starter"
            task_execution_cache_finisher="task-execution-cache_finisher"
            task_execution_cache_transferer="task-execution-cache_transferer"
            task_execution_cache_collector="task-execution-cache_collector"
            task_tab_generalist="task-tab-generalist"
            task_tab_collector="task-tab-collector"
            task_tab_harvester="task-tab-harvester"
            task_distribution="task-distribution"
            perception_dpo="perception-dpo"
            perception_mdpo="perception-mdpo"
            swarm_convergence="swarm-convergence"
            tv_population="tv-population"
            block_distributor="block-distributor"
            block_motion="block-motion"
            tv_environment="tv-environment"/>

        <create output_interval="10"
                block_acq_locs="block-acq-locs"
                block_acq_explore_locs="block-acq-explore-locs"
                cache_acq_locs="cache-acq-locs"
                cache_acq_explore_locs="cache-acq-explore-locs"
                cache_acq_vector_locs="cache-acq-vector-locs"
                cache_locations="cache-locations"
                swarm_dist2D_pos="swarm-dist-pos2D"/>
      </metrics>
    </output>
    <!-- <convergence -->
    <!--     n_threads="0" -->
    <!--     epsilon="0.1" -->
    <!--     epsilon_delta="1000"> -->
    <!--   <positional_entropy -->
    <!--       enable="false" -->
    <!--       horizon="0:13.41" -->

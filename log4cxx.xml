<?xml version="1.0" encoding="UTF-8" ?>
 <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
  <!-- Output the log message to system console. -->
  <appender
      name="__console__"
  class="log4cxx.ConsoleAppender">
    <param name="Target" value="System.out"/>
        <layout class="log4cxx.PatternLayout">
            <param name="ConversionPattern" value="%x [%-5p] %c - %m%n"/>
        </layout>
  </appender>

  <root>
        <priority value="info" />
        <appender-ref ref="__console__"/>
  </root>

  <!-- Specify the level for some specific categories -->
  <category name="fordyca.events" >
    <priority value ="all" />
  </category>
  <category name="rcppsw.ta.executive" >
    <priority value ="info" />
  </category>
  <category name="rcppsw.algorithm.clustering" >
    <priority value ="off" />
  </category>
    <category name="fordyca.support.tasking_oracle" >
    <priority value ="debug" />
  </category>
  <category name="fordyca.controller" >
    <priority value ="info" />
  </category>
  <category name="fordyca.fsm.depth0" >
    <priority value ="all" />
  </category>
  <category name="fordyca.support.block_dist" >
    <priority value ="info" />
  </category>
  <category name="fordyca.support.depth2.dynamic_cache_creator" >
    <priority value ="trace" />
  </category>
    <category name="fordyca.support.depth2.cache_center_calculator" >
    <priority value ="trace" />
  </category>
  <category name="fordyca.support.base_cache_creator" >
    <priority value ="trace" />
  </category>

  <category name="fordyca.controller.perception" >
    <priority value ="info" />
  </category>

  <category name="fordyca.ds.arena_map" >
    <priority value ="info" />
  </category>
  <category name="fordyca.ds.perceived_arena_map" >
    <priority value ="info" />
  </category>

 </log4j:configuration>
